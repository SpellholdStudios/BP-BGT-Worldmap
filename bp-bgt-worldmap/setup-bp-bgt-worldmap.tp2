    READ_ASCII off resref
    PATCH_MATCH "%resref%" WITH
      "AR0700"
      "AR0400"
      "AR0300"
      "AR0500"
      "AR0800"
      "AR0900"
      "AR1000"
      "AR1100"
      "AR1400"
      "AR1300"
      "AR1200"
      "AR0020"
      "AR1404"
      "AR1304"
      "AR2000"
      "AR1900"
      "AR1700"
      "AR2500"
      "AR2600"
      "AR1800"
      "AR1600"
      "AR2100"
      "AR1500"
      "AR2300"
      "AR2800"
      BEGIN
        WRITE_LONG off + 0x30 (THIS BAND BNOT BIT1) BAND BNOT BIT2 // Remove 'Reveal from linked area' and 'Can be visited'
      END
      DEFAULT
    END
  END


